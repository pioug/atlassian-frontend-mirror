{
  "extends": "../../../tsconfig.node.json",
  "include": [
    "__tests__/**/*.ts",
    "__tests__/**/*.tsx",
    "docs/**/*.ts",
    "docs/**/*.tsx",
    "examples/**/*.ts",
    "examples/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "scripts"
  ],
  "compilerOptions": {
    "baseUrl": "./"
  },
  "ts-node": {
    // It is faster to skip typechecking.
    "transpileOnly": true,
    // We must load files for third party defs - https://typestrong.org/ts-node/docs/types
    "files": true,
  }
}
