{
	"extends": "../../../tsconfig.base.json",
	"include": ["./src/**/*.ts", "./src/**/*.tsx"],
	"exclude": [
		"**/docs/**/*",
		"**/__tests__/**/*",
		"**/vr-tests/**/*",
		"**/*.test.*",
		"**/test.*",
		"**/test-*",
		"**/examples.ts",
		"**/examples.tsx",
		"**/examples/*.ts",
		"**/examples/*.tsx",
		"**/examples/**/*.ts",
		"**/examples/**/*.tsx",
		"**/storybook/**/*",
		"**/constellation/**/*",
		".storybook/*",
		"./__fixtures__/**/*",
		"./__generated__/**/*",
		"./mocks/**/*",
		"./__mocks__/**/*",
		"**/mock.*"
	],
	"compilerOptions": {
		"target": "es6",
		"lib": [
			"es5",
			"scripthost",
			"es2015.core",
			"es2015.collection",
			"es2015.symbol",
			"es2015.iterable",
			"es2015.promise",
			"es2016",
			"es2017"
		],
		"composite": true,
		"verbatimModuleSyntax": false,
		"outDir": "../../../tsDist/@atlaskit__codemod-cli/app"
	},
	"references": [
		{
			"path": "../../monorepo-tooling/codemod-utils/tsconfig.app.json"
		},
		{
			"path": "../icon/tsconfig.app.json"
		},
		{
			"path": "../icon-lab/tsconfig.app.json"
		},
		{
			"path": "../tokens/tsconfig.app.json"
		}
	]
}
