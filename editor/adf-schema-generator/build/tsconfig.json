{
  "extends": "../tsconfig",
  "compilerOptions": {
    "declaration": true,
    "target": "es2019",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "verbatimModuleSyntax": false,
    "paths": {}
  },
  "include": [
    "../src/**/*.ts",
    "../src/**/*.tsx"
  ],
  "exclude": [
    "../src/**/__tests__/*",
    "../src/**/*.test.*",
    "../src/**/test.*",
    "../src/json-schema"
  ]
}
